<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" maxHeight="700.0" maxWidth="800.0" minHeight="700.0" minWidth="800.0" prefHeight="700.0" prefWidth="800.0" style="-fx-background-color: #C0C0C0; -fx-border-color: #808080; -fx-border-width: 2;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.final_project_java.controllers.ListToAddMenuController">
    <padding>
        <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
    </padding>
    <Label fx:id="sceneName" alignment="CENTER" contentDisplay="TOP" maxHeight="35.0" maxWidth="750.0" minHeight="35.0" minWidth="750.0" prefHeight="35.0" prefWidth="750.0" style="-fx-background-color: #494949; -fx-background-radius: 15; -fx-border-color: #808080; -fx-border-radius: 15;" text="List" textAlignment="CENTER" textFill="WHITE">
        <font>
            <Font name="Times New Roman Bold Italic" size="18.0" />
        </font>
        <opaqueInsets>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </opaqueInsets>
        <VBox.margin>
            <Insets bottom="10.0" top="15.0" />
        </VBox.margin>
    </Label>
    <VBox maxHeight="65.0" minHeight="65.0" prefHeight="65.0">
        <Label fx:id="nothingFoundError" maxWidth="500.0" minWidth="500.0" prefWidth="500.0" textFill="#8a0707">
            <font>
                <Font name="System Bold Italic" size="14.0" />
            </font>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </Label>
        <HBox alignment="TOP_CENTER" maxHeight="30.0" minWidth="30.0" prefHeight="30.0" prefWidth="200.0">
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <TextField fx:id="findField" maxWidth="500.0" minWidth="500.0" prefWidth="500.0" promptText="Find">
                <HBox.margin>
                    <Insets bottom="30.0" right="50.0" />
                </HBox.margin>
            </TextField>
            <Button maxWidth="200.0" minWidth="200.0" mnemonicParsing="false" prefWidth="200.0" style="-fx-background-radius: 15;" text="Find">
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </Button>
        </HBox>
    </VBox>
    <VBox alignment="CENTER" minHeight="450.0" prefHeight="200.0" prefWidth="100.0">
        <ListView fx:id="listView" maxWidth="750.0" minWidth="750.0" prefWidth="750.0" />
    </VBox>
    <HBox alignment="CENTER" maxHeight="50.0" maxWidth="400.0" minWidth="400.0" prefHeight="100.0" prefWidth="400.0">
        <VBox.margin>
            <Insets top="15.0" />
        </VBox.margin>
        <Button maxWidth="150.0" minWidth="150.0" mnemonicParsing="false" onAction="#addBtnClick" prefWidth="150.0" style="-fx-background-color: #2f4f4f; -fx-background-radius: 15;" text="Add" textFill="WHITE">
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
            <HBox.margin>
                <Insets right="60.0" />
            </HBox.margin>
        </Button>
        <Button layoutX="135.0" layoutY="26.0" maxWidth="150.0" minWidth="150.0" mnemonicParsing="false" onAction="#cancelBtnClick" prefWidth="150.0" style="-fx-background-color: #493536; -fx-background-radius: 15;" text="Cancel" textFill="WHITE">
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
    </HBox>
</VBox>
