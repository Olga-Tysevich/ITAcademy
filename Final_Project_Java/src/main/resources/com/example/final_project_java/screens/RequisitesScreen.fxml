<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" maxHeight="700.0" maxWidth="800.0" minHeight="700.0" minWidth="800.0" prefHeight="700.0" prefWidth="800.0" style="-fx-background-color: #C0C0C0; -fx-border-color: #808080; -fx-border-width: 2;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.final_project_java.controllers.RequisitesController">
    <padding>
        <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
    </padding>
    <Label fx:id="warning" maxWidth="750.0" minWidth="750.0" prefWidth="750.0" textFill="RED">
        <font>
          <Font name="System Bold Italic" size="14.0" />
        </font>
    </Label>
    <Label fx:id="name" alignment="CENTER" contentDisplay="TOP" maxHeight="35.0" maxWidth="350.0" minHeight="35.0" minWidth="350.0" prefHeight="35.0" prefWidth="350.0" style="-fx-background-color: #494949; -fx-border-color: #808080; -fx-border-radius: 15; -fx-background-radius: 15;" text="Requisites: " textAlignment="CENTER" textFill="WHITE">
        <font>
            <Font name="Times New Roman Bold Italic" size="18.0" />
        </font>
        <opaqueInsets>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </opaqueInsets>
        <VBox.margin>
            <Insets bottom="70.0" top="30.0" />
        </VBox.margin>
    </Label>
    <GridPane alignment="CENTER" maxWidth="750.0" minWidth="750.0" prefWidth="750.0" vgap="20.0">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="548.0" minWidth="10.0" prefWidth="513.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" percentHeight="0.0" prefHeight="40.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <opaqueInsets>
            <Insets />
        </opaqueInsets>
        <VBox.margin>
            <Insets />
        </VBox.margin>
        <padding>
            <Insets bottom="10.0" top="10.0" />
        </padding>
        <TextField fx:id="nameForPrint" onKeyReleased="#changeName" prefHeight="25.0" prefWidth="253.0" promptText="Name" text="Name">
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
        </TextField>
        <TextField fx:id="taxpayerID" layoutX="51.0" layoutY="13.0" onKeyReleased="#changeTaxpayerID" prefHeight="25.0" prefWidth="253.0" promptText="TaxpayerID" text="TaxpayerID" GridPane.rowIndex="1" />
        <TextField fx:id="classifierCode" layoutX="51.0" layoutY="43.0" onKeyReleased="#changeClassifierCode" prefHeight="25.0" prefWidth="253.0" promptText="ClassifierCode" text="ClassifierCode" GridPane.rowIndex="2" />
        <TextField fx:id="legalAddress" layoutX="51.0" layoutY="73.0" onKeyReleased="#changeLegalAddress" prefHeight="25.0" prefWidth="253.0" promptText="LegalAddress" text="LegalAddress" GridPane.rowIndex="3" />
        <TextField fx:id="mailingAddress" layoutX="51.0" layoutY="103.0" onKeyReleased="#changeMailingAddress" prefHeight="25.0" prefWidth="253.0" promptText="MailingAddress" text="MailingAddress" GridPane.rowIndex="4" />
        <TextField fx:id="phone" layoutX="51.0" layoutY="13.0" onKeyReleased="#changePhone" prefHeight="25.0" prefWidth="253.0" promptText="Phone" text="Phone" GridPane.rowIndex="5" />
    </GridPane>
    <HBox alignment="CENTER" maxWidth="400.0" minWidth="400.0" prefHeight="100.0" prefWidth="400.0">
        <Button maxWidth="150.0" minWidth="150.0" mnemonicParsing="false" onAction="#saveBtnClick" prefWidth="150.0" style="-fx-background-color: #2f4f4f; -fx-background-radius: 15;" text="Save" textFill="#fffefe">
            <HBox.margin>
                <Insets right="40.0" />
            </HBox.margin>
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
        <Button maxWidth="150.0" minWidth="150.0" mnemonicParsing="false" onAction="#cancelBtnClick" prefWidth="150.0" style="-fx-background-color: #493536; -fx-background-radius: 15;" text="Cancel" textFill="WHITE">
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
      <VBox.margin>
         <Insets top="20.0" />
      </VBox.margin>
    </HBox>
</VBox>
