<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" maxHeight="700.0" maxWidth="800.0" minHeight="700.0" minWidth="800.0" prefHeight="700.0"
      prefWidth="800.0" style="-fx-background-color: #C0C0C0; -fx-border-color: #808080; -fx-border-width: 2;"
      xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.final_project_java.controllers.MainScreenController">
    <padding>
        <Insets bottom="20.0" left="10.0" right="10.0" top="20.0"/>
    </padding>
    <Label fx:id="name" alignment="CENTER" contentDisplay="TOP" maxHeight="35.0" maxWidth="500.0" minHeight="35.0"
           minWidth="500.0" prefHeight="35.0" prefWidth="500.0"
           style="-fx-background-color: #494949; -fx-background-radius: 15; -fx-border-color: #808080; -fx-border-radius: 15;"
           text="Label" textAlignment="CENTER" textFill="WHITE">
        <font>
            <Font name="Times New Roman Bold Italic" size="18.0"/>
        </font>
        <opaqueInsets>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </opaqueInsets>
        <VBox.margin>
            <Insets bottom="150.0" top="30.0"/>
        </VBox.margin>
    </Label>
    <Button fx:id="requisitesBtn" alignment="CENTER" maxHeight="30.0" maxWidth="350.0" minHeight="30.0" minWidth="350.0"
            mnemonicParsing="false" onAction="#requisitesBtnClick" prefHeight="30.0" prefWidth="350.0"
            style="-fx-background-color: #ffffff; -fx-background-radius: 15; -fx-border-color: #929292; -fx-border-radius: 15;"
            text="Requisites" textOverrun="CENTER_ELLIPSIS">
        <VBox.margin>
            <Insets bottom="50.0"/>
        </VBox.margin>
        <font>
            <Font name="Times New Roman" size="14.0"/>
        </font>
    </Button>
    <Button fx:id="bankAccountBtn" alignment="CENTER" layoutX="35.0" layoutY="335.0" maxHeight="30.0" maxWidth="350.0"
            minHeight="30.0" minWidth="350.0" mnemonicParsing="false" onAction="#bankAccountsBtnClick" prefHeight="30.0"
            prefWidth="350.0"
            style="-fx-background-color: #ffffff; -fx-border-color: #929292; -fx-border-radius: 15; -fx-background-radius: 15;"
            text="Bank accounts" textOverrun="CENTER_ELLIPSIS">
        <font>
            <Font name="Times New Roman" size="14.0"/>
        </font>
        <VBox.margin>
            <Insets bottom="50.0"/>
        </VBox.margin>
    </Button>
    <Button alignment="CENTER" layoutX="35.0" layoutY="363.0" maxHeight="30.0" maxWidth="350.0" minHeight="30.0"
            minWidth="350.0" mnemonicParsing="false" onAction="#customerBtnClick" prefHeight="30.0" prefWidth="350.0"
            style="-fx-background-color: #ffffff; -fx-border-color: #929292; -fx-background-radius: 15; -fx-border-radius: 15;"
            text="Customers" textOverrun="CENTER_ELLIPSIS">
        <font>
            <Font name="Times New Roman" size="14.0"/>
        </font>
        <VBox.margin>
            <Insets bottom="50.0"/>
        </VBox.margin>
    </Button>
    <Button alignment="CENTER" layoutX="35.0" layoutY="380.0" maxHeight="30.0" maxWidth="350.0" minHeight="30.0"
            minWidth="350.0" mnemonicParsing="false" onAction="#recyclableUnitBtnClick" prefHeight="30.0"
            prefWidth="350.0"
            style="-fx-background-color: #ffffff; -fx-border-color: #929292; -fx-background-radius: 15; -fx-border-radius: 15;"
            text="Recyclable units" textOverrun="CENTER_ELLIPSIS">
        <font>
            <Font name="Times New Roman" size="14.0"/>
        </font>
        <VBox.margin>
            <Insets bottom="20.0"/>
        </VBox.margin>
    </Button>
</VBox>
